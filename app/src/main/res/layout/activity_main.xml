<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- this will be fo the header of the application to greet the user -->
        <TextView
            android:id="@+id/quizTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/textColor1"
            android:text="@string/quiz_title"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/welcomeMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quizTitle"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/welcome_message"/>

        <TextView
            android:id="@+id/question1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcomeMessage"
            android:background="@color/questionColor"
            android:gravity="center"
            android:padding="16dp"
            android:text="What cartoon character did Esther Jones inspire?" />

        <Button
            android:id="@+id/quest1AnswrA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question1"
            android:layout_margin="8dp"
            android:background="@color/buttonColor"
            android:text="A. Lucy" />
        <!--For each answer this is to be added per button android:onClick="addTwotoUserScore"-->

        <Button
            android:id="@+id/quest1AnswrB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/quest1AnswrA"
            android:background="@color/buttonColor"
            android:text="B. Olive Oyl" />

        <Button
            android:id="@+id/quest1AnswrC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question1"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/quest1AnswrB"
            android:background="@color/buttonColor"
            android:text="C. Betty boop" /><!--this is the correct answer-->

        <TextView
            android:id="@+id/question2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quest1AnswrA"
            android:background="@color/questionColor"
            android:gravity="center"
            android:padding="16dp"
            android:text="Mexican folk dance is a blend of European, African, and Indigenous heritage." />

        <Button
            android:id="@+id/answr2True"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question2"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/buttonColor"
            android:text="True" /><!--this is the correct answer-->

        <Button
            android:id="@+id/quest2False"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question2"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/answr2True"
            android:background="@color/buttonColor"
            android:text="False" />

        <TextView
            android:id="@+id/question3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/answr2True"
            android:background="@color/questionColor"
            android:gravity="center"
            android:padding="16dp"
            android:text="Who came up with the phrase 'Girl, bye'?" />

        <Button
            android:id="@+id/quest3AnswrA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question3"
            android:layout_margin="8dp"
            android:background="@color/buttonColor"
            android:text="A. Pauletta Spencer" />
        <!--For each answer this is to be added per button android:onClick="addTwotoUserScore"-->

        <Button
            android:id="@+id/quest3AnswrB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question3"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/quest3AnswrA"
            android:background="@color/buttonColor"
            android:text="B. Delores Cole" />

        <Button
            android:id="@+id/quest3AnswrC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question3"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/quest3AnswrB"
            android:background="@color/buttonColor"
            android:text="C. Quintessa Higgins" /><!--this is the correct answer-->

        <TextView
            android:id="@+id/question4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quest3AnswrA"
            android:background="@color/questionColor"
            android:gravity="center"
            android:padding="16dp"
            android:text="Bessie Coleman was the first African American woman who was licensed as a pilot?" />

        <Button
            android:id="@+id/answr4True"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question4"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/buttonColor"
            android:text="True" /><!--this is the correct answer-->

        <Button
            android:id="@+id/answr4False"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question4"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/answr4True"
            android:background="@color/buttonColor"
            android:text="False" />

        <!--above are questions 3 & 4 and then below are 5 & 6 as that is the question format -->

        <TextView
            android:id="@+id/question5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/answr4True"
            android:background="@color/questionColor"
            android:gravity="center"
            android:padding="16dp"
            android:text="The trial called Loving v. Virginia was based on what civil rights issue?" />

        <Button
            android:id="@+id/quest5AnswrA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question5"
            android:layout_margin="8dp"
            android:background="@color/buttonColor"
            android:text="A. Segregation" />
        <!--For each answer this is to be added per button android:onClick="addTwotoUserScore"-->

        <Button
            android:id="@+id/quest5AnswrB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question5"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/quest5AnswrA"
            android:background="@color/buttonColor"
            android:text="B. Interracial Marriage" /><!--this is the correct answer-->

        <Button
            android:id="@+id/quest5AnswrC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question5"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/quest5AnswrB"
            android:background="@color/buttonColor"
            android:text="C. Lynching" />

        <TextView
            android:id="@+id/question6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quest5AnswrA"
            android:background="@color/questionColor"
            android:gravity="center"
            android:padding="16dp"
            android:text="Mexico introduced chocolate, corn and chilies to the world." />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question6"
            android:orientation="horizontal">
        <RadioButton
            android:id="@+id/answr6True"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/buttonColor"
            android:onClick="onRadioButtonClicked"
            android:text="True" />
            <!--this will need to add tot he users core -->

        <RadioButton
            android:id="@+id/answr6False"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/question6"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/answr6True"
            android:background="@color/buttonColor"
            android:text="False" />

        </RadioGroup>
        <!-- below will be where the score can be seen -->

        <!-- below is the code where the questions will be displayed and the answers as well for the user to interact with. -->
        <!-- <Button
                android:id="@+id/userSubmitScore"
                android:layout_below="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Submit answers"
                android:orientation="vertical"
                android:background="@color/questionColor">





            </LinearLayout> -->

    </RelativeLayout>
</ScrollView>