<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- this will be for the header of the application to greet the user -->
        <TextView
            android:id="@+id/quizTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/textColor2"
            android:text="@string/quiz_title"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/welcomeMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quizTitle"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/textColor1"
            android:padding="16dp"
            android:text="@string/welcome_message"/>

        <TextView
            android:id="@+id/question1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcomeMessage"
            android:background="@color/questionColor"
            android:layout_marginTop="16dp"
            android:textColor="@color/textColor1"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/question1" />

        <Button
            android:id="@+id/quest1AnswrA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/question1"
            android:layout_margin="8dp"
            android:textColor="@color/textColor1"
            android:background="@color/buttonColor"
            android:text="A. Lucy" />
        <!--For each answer this is to be added per button android:onClick="addTwotoUserScore"-->

        <Button
            android:id="@+id/quest1AnswrB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question1"
            android:layout_marginLeft="40dp"
            android:textColor="@color/textColor1"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/quest1AnswrA"
            android:background="@color/buttonColor"
            android:text="B. Olive Oyl" />

        <Button
            android:id="@+id/quest1AnswrC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question1"
            android:layout_marginLeft="32dp"
            android:textColor="@color/textColor1"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/quest1AnswrB"
            android:background="@color/buttonColor"
            android:text="C. Betty boop" /><!--this is the correct answer-->

        <TextView
            android:id="@+id/question2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quest1AnswrA"
            android:background="@color/questionColor"
            android:layout_marginTop="32dp"
            android:textColor="@color/textColor1"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/question2" />

        <Button
            android:id="@+id/answr2True"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question2"
            android:layout_marginLeft="64dp"
            android:textColor="@color/textColor1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/buttonColor"
            android:text="True" /><!--this is the correct answer-->

        <Button
            android:id="@+id/answr2False"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question2"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/textColor1"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/answr2True"
            android:background="@color/buttonColor"
            android:text="False" />

        <TextView
            android:id="@+id/question3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/answr2True"
            android:background="@color/questionColor"
            android:textColor="@color/textColor1"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/question3" />

        <Button
            android:id="@+id/quest3AnswrA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question3"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="32dp"
            android:textColor="@color/textColor1"
            android:background="@color/buttonColor"
            android:text="A.Pauletta Spencer" />
        <!--For each answer this is to be added per button android:onClick="addTwotoUserScore"-->

        <Button
            android:id="@+id/quest3AnswrB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quest3AnswrA"
            android:layout_marginLeft="32dp"
            android:textColor="@color/textColor1"
            android:layout_marginTop="8dp"
            android:background="@color/buttonColor"
            android:text="B. Delores Cole" />

        <Button
            android:id="@+id/quest3AnswrC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quest3AnswrB"
            android:layout_marginLeft="32dp"
            android:textColor="@color/textColor1"
            android:layout_marginTop="8dp"
            android:background="@color/buttonColor"
            android:text="C. Quintessa Higgins" /><!--this is the correct answer-->

        <TextView
            android:id="@+id/question4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quest3AnswrC"
            android:background="@color/questionColor"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:textColor="@color/textColor2"
            android:padding="16dp"
            android:text="@string/question4" />

        <CheckBox
            android:id="@+id/answr4True"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question4"
            android:paddingLeft="56dp"
            android:textColor="@color/textColor2"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="True" /><!--this is the correct answer-->

        <CheckBox
            android:id="@+id/answr4False"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question4"
            android:paddingLeft="48dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/textColor2"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/answr4True"
            android:textSize="16sp"
            android:text="False" />

        <!--above are questions 3 & 4 and then below are 5 & 6 as that is the question format -->

        <TextView
            android:id="@+id/question5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/answr4True"
            android:textColor="@color/textColor1"
            android:background="@color/questionColor"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/question5" />

        <Button
            android:id="@+id/quest5AnswrA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question5"
            android:textColor="@color/textColor1"
            android:layout_margin="8dp"
            android:background="@color/buttonColor"
            android:text="A. Segregation" />
        <!--For each answer this is to be added per button android:onClick="addTwotoUserScore"-->

        <Button
            android:id="@+id/quest5AnswrB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quest5AnswrA"
            android:textColor="@color/textColor1"
            android:layout_margin="8dp"
            android:background="@color/buttonColor"
            android:text="B. Interracial Marriage" /><!--this is the correct answer-->

        <Button
            android:id="@+id/quest5AnswrC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest5AnswrB"
            android:textColor="@color/textColor1"
            android:layout_margin="8dp"
            android:background="@color/buttonColor"
            android:text="C. Lynching" />

        <TextView
            android:id="@+id/question6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quest5AnswrC"
            android:background="@color/questionColor"
            android:textColor="@color/textColor1"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:padding="16dp"
            android:text="@string/question6" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question6"
            android:orientation="horizontal">
        <RadioButton
            android:id="@+id/answr6True"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/textColor1"
            android:background="@color/buttonColor"
            android:text="True"/>

            <!--this will need to add tot he users core -->

        <RadioButton
            android:id="@+id/answr6False"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/question6"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/textColor1"
            android:background="@color/buttonColor"
            android:text="False" />

        </RadioGroup>
        <TextView
            android:id="@+id/question7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question6"
            android:background="@color/questionColor"
            android:textColor="@color/textColor1"
            android:gravity="center"
            android:layout_marginTop="48dp"
            android:padding="16dp"
            android:text="@string/question7" />

        <EditText
            android:id="@+id/quest7answrTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:hint="1800s"
            android:inputType="number"
            android:layout_below="@id/question7"/>

        <Button
                android:id="@+id/userSubmitScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit answers"
                android:layout_marginTop="64dp"
                android:layout_below="@id/quest7answrTextBox"
                android:background="@color/questionColor"
                android:textColor="@color/textColor1"
                android:gravity="center" />
                <!--android:onClick="totalUserScore"-->

    </RelativeLayout>
</ScrollView>